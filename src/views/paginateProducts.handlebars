{{!--utiliza los atributos del objeto products --}}
{{#if isValid}}
<div>
    <table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Buttons</th>
        </tr>
    </thead>
    <tbody>
        {{#each docs}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>
            <td><button id={{this._id}}  class="btnAddProduct">Agregar</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
<br/>
<div>
    {{!-- se activa el cambio de pagina si se cumple osea,pageActual > prevPage --}}
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h1>No hay estudiantes para mostrar</h1>
{{/if}}

<script src="/js/productsManager.js"></script>